{
	"extends": ["solhint:recommended"],
	"plugins": [],
	"rules": {
      "quotes": ["warn", "double"],
      "compiler-version": ["error", "0.8.4"],
      "func-visibility": ["error", { "ignoreConstructors": true }],
      "not-rely-on-time": "off",
      "const-name-snakecase": "off",
      "reason-string": ["warn", { "maxLength": 256 }]
    }
}
