{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "files": [
    "./hardhat.config.ts",
    "./typechain-types/hardhat.d.ts",
    "./index.d.ts"
  ],
  "include": [
    "./util",
    "./tasks/scripts",
    "./deploy",
    "./test",
    "./tasks",
    "./types",
  ],
  "exclude": [
    "node_modules",
    "typechain"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  }
}
