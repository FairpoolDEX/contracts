{
  "name": "shield-contracts",
  "version": "1.0.0",
  "description": "Shield Finance contracts",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "lint": "solhint contracts/*.sol && eslint .",
    "lint:markdown": "markdownlint --ignore node_modules **/*.md",
    "format": "prettier --check \"contracts/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yml\"",
    "test": "hardhat --show-stack-traces test",
    "test:watch": "nodemon -x 'hardhat test'",
    "coverage": "npm run build && hardhat coverage --temp artifacts",
    "deploy": "hardhat run scripts/deployShieldToken.ts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.8.2",
    "@typechain/ethers-v5": "^2.0.0",
    "@types/chai": "^4.2.18",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.17.1",
    "chai": "^4.3.4",
    "csv-parser": "^3.0.0",
    "dotenv": "^8.6.0",
    "eslint-plugin-react": "^7.24.0",
    "ethereum-waffle": "^3.2.1",
    "ethers": "^5.2.0",
    "execa": "^5.0.1",
    "hardhat": "^2.3.0",
    "hardhat-deploy": "^0.7.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-typechain": "^0.3.5",
    "hardhat-watcher": "^2.1.1",
    "lodash": "^4.17.21",
    "neat-csv": "^6.0.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "prettier-plugin-solidity": "^1.0.0-beta.11",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^3.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.26.0"
  }
}
